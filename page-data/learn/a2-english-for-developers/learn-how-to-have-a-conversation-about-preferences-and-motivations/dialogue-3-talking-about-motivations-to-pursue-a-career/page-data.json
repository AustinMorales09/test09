y":null,"startTime":10.4,"finishTime":12.8,"dialogue":{"text":"It allows me to plan for my future with confidence.","align":"right"}},{"background":null,"character":"Lisa","position":null,"opacity":null,"startTime":13.3,"finishTime":16.3,"dialogue":{"text":"In other fields, it's much more difficult to achieve this stability.","align":"right"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":17.4,"finishTime":19.4,"dialogue":{"text":"Financial stability is certainly important, Lisa.","align":"left"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":19.8,"finishTime":24,"dialogue":{"text":"For me, it was the opportunity to collaborate with experts from many fields","align":"left"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":24,"finishTime":26,"dialogue":{"text":"and have different perspectives.","align":"left"}},{"background":null,"character":"Lisa","position":null,"opacity":null,"startTime":26.8,"finishTime":29.2,"dialogue":{"text":"Collaborating with diverse teams can be exciting, Brian.","align":"right"}},{"background":null,"character":"Lisa","position":null,"opacity":null,"startTime":29.2,"finishTime":32.1,"dialogue":{"text":"Another thing was the chance to be part of projects","align":"right"}},{"background":null,"character":"Lisa","position":null,"opacity":null,"startTime":32.1,"finishTime":34.2,"dialogue":{"text":"that push the limits of innovation and creativity.","align":"right"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":34.9,"finishTime":36,"dialogue":{"text":"I'm with you on that one.","align":"left"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":36.1,"finishTime":39.6,"dialogue":{"text":"I'm also interested in the flexibility that tech roles offer.","align":"left"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":39.7,"finishTime":43.1,"dialogue":{"text":"They allow us to balance our jobs with personal interests and hobbies.","align":"left"}},{"background":null,"character":"Lisa","position":null,"opacity":null,"startTime":44.3,"finishTime":47.3,"dialogue":{"text":"Yeah. Also, the satisfaction of solving complex problems","align":"right"}},{"background":null,"character":"Lisa","position":null,"opacity":null,"startTime":47.3,"finishTime":49.6,"dialogue":{"text":"and finding practical solutions is really thrilling.","align":"right"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":50.3,"finishTime":53,"dialogue":{"text":"Knowing that we solved problems is really exciting, Lisa.","align":"left"}},{"background":null,"character":"Brian","position":null,"opacity":null,"startTime":53.4,"finishTime":56.7,"dialogue":{"text":"I hope we keep getting as much motivation from it as we can.","align":"left"}},{"background":null,"character":"Lisa","position":{"x":125,"y":0,"z":1},"opacity":null,"startTime":57.2,"finishTime":null,"dialogue":null},{"background":null,"character":"Brian","position":{"x":-25,"y":0,"z":1},"opacity":null,"startTime":57.7,"finishTime":null,"dialogue":null}]}}}},"pageContext":{"challengeMeta":{"blockHashSlug":"/learn/a2-english-for-developers/#learn-how-to-have-a-conversation-about-preferences-and-motivations","dashedName":"dialogue-3-talking-about-motivations-to-pursue-a-career","certification":"a2-english-for-developers","disableLoopProtectTests":false,"disableLoopProtectPreview":false,"superBlock":"a2-english-for-developers","block":"learn-how-to-have-a-conversation-about-preferences-and-motivations","isFirstStep":false,"template":null,"required":[],"nextBlock":"learn-how-to-have-a-conversation-about-preferences-and-motivations","nextChallengePath":"/learn/a2-english-for-developers/learn-how-to-have-a-conversation-about-preferences-and-motivations/task-68","prevChallengePath":"/learn/a2-english-for-developers/learn-how-to-have-a-conversation-about-preferences-