    "result": {"data":{"challengeNode":{"challenge":{"videoId":null,"title":"Dialogue 2: Talking about Anna","description":"<section id=\"description\">\n<p>Watch the video above to understand the context of the upcoming lessons.</p>\n</section>","challengeType":21,"helpCategory":"English","superBlock":"a2-english-for-developers","block":"learn-how-to-discuss-roles-and-responsibilies","fields":{"slug":"/learn/a2-english-for-developers/learn-how-to-discuss-roles-and-responsibilies/dialogue-2-talking-about-anna","blockName":"learn-how-to-discuss-roles-and-responsibilies","tests":[]},"translationPending":false,"assignments":["<p>Watch the video</p>"],"scene":{"setup":{"background":"company1-reception.png","characters":[{"character":"Tom","position":{"x":-25,"y":0,"z":1},"opacity":null},{"character":"Alice","position":{"x":125,"y":0,"z":1},"opacity":null}],"audio":{"filename":"3.3-2.mp3","startTime":1,"startTimestamp":null,"finishTimestamp":null},"alwaysShowDialogue":true},"commands":[{"background":null,"character":"Tom","position":{"x":25,"y":0,"z":1},"opacity":null,"startTime":0,"finishTime":null,"dialogue":null},{"background":null,"character":"Alice","position":{"x":70,"y":0,"z":1},"opacity":null,"startTime":0.5,"finishTime":null,"dialogue":null},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":1,"finishTime":3.9,"dialogue":{"text":"Hey, have you ever worked with Anna from HR?","align":"left"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":4.6,"finishTime":6.7,"dialogue":{"text":"I've seen her a couple of times. Why do you ask?","align":"right"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":7.1,"finishTime":12.5,"dialogue":{"text":"Well, I noticed that she's always in her office super early","align":"left"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":10.4,"finishTime":15.8,"dialogue":{"text":"and leaves pretty late. Do you know why?","align":"left"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":13.3,"finishTime":14.6,"dialogue":{"text":"Yeah, she's very committed.","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":14.7,"finishTime":16.7,"dialogue":{"text":"She seems to take her work very seriously.","align":"right"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":17,"finishTime":20,"dialogue":{"text":"I don't really know much about her, to be honest.","align":"left"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":19.2,"finishTime":22.2,"dialogue":{"text":"What's her role?","align":"left"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":20.7,"finishTime":25.1,"dialogue":{"text":"Anna is the head of HR, and she has to make sure","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":22.9,"finishTime":27.3,"dialogue":{"text":"our company runs smoothly when it comes to HR.","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":25.8,"finishTime":28,"dialogue":{"text":"She doesn't have to interview for hiring people, though.","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":28.3,"finishTime":30.2,"dialogue":{"text":"The rest of the HR team does the interviews.","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":30.2,"finishTime":32.3,"dialogue":{"text":"She's been with us for about eight years now.","align":"right"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":32.5,"finishTime":35.6,"dialogue":{"text":"Wow, that's a long time! Is she a strict person?","align":"left"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":36.1,"finishTime":38.6,"dialogue":{"text":"She's very easygoing, actually.","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":38,"finishTime":40.7,"dialogue":{"text":"She's serious when it comes to work but also has a good sense of humor.","align":"right"}},{"background":null,"character":"Alice","position":null,"opacity":null,"startTime":41.3,"finishTime":44.6,"dialogue":{"text":"She's fair and supportive, always willing to help and answer questions.","align":"right"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":45.7,"finishTime":47.1,"dialogue":{"text":"She sounds like a great person.","align":"left"}},{"background":null,"character":"Tom","position":null,"opacity":null,"startTime":47.3,"finishTime":48.7,"dialogue":{"text":"I should have a chat with her sometime.","align":"left"}},{"background":null,"character":"Alice","position":{"x":125,"y":0,"z":1},"opacity":null,"startTime":49.2,"finishTime":null,"dialogue":null},{"background":null,"character":"Tom","position":{"x":-25,"y":0,"z":1},"opacity":null,"startTime":49.7,"finishTime":null,"dialogue":null}]}}}},"pageContext":{"challengeMeta":{"blockHashSlug":"/learn/a2-english-for-developers/#learn-how-to-discuss-roles-and-responsibilies","dashedName":"dialogue-2-talking-about-anna","certification":"a2-english-for-developers","disableLoopProtectTests":false,"disableLoopProtectPreview":false,"superBlock":"a2-english-for-developers","block":"learn-how-to-discuss-roles-and-responsibilies","isFirstStep":false,"template":null,"required":[],"nextBlock":"learn-how-to-discuss-roles-and-responsibilies","nextChallengePath":"/learn/a2-english-for-developers/learn-how-to-discuss-roles-and-responsibilies/task-33","prevChallengePath":"/learn/a2-english-for-developers/learn-how-to-discuss-roles-and-responsibilies/task-32","id":"65d5cebba7a44042a1815053"},"projectPreview":{"showProjectPreview":false,"challengeData":{"challengeType":19,"challengeFiles":[]}},"slug":"/learn/a2-english-for-develo